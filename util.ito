
{{- global shape kind x y-}}
  {{-switch $0}}
    {{-case "Forest"  "Village"  "Prarie"  "Water" "Mountain" -}}
      {{let x=sub $x 2}}
      <path d="M{{$x}} {{sub $y 5}} \
               L {{add $x 5}} {{sub $y 3}} \
               L {{add $x 5}} {{add $y 3}} \
               L {{$x}} {{add $y 5}} \
               L {{sub $x 5}} {{add $y 3}} \
               L {{sub $x 5}} {{sub $y 3}} \
               L {{ $x}} {{sub $y 5}}" {{fl_stk (color $kind) "black" 0.1}}/>
    {{-case _ -}}
      <rect {{xywh (sub $x 7) (sub $y 4) 10 9}} {{fl_stk (color $kind) "black" 0.1}} />
  {{- /switch}}
{{/global}}

{{- global color -}}
  {{-switch $0 -}}
    {{- case "Attack"}}red
    {{- case "Food"}}lime
    {{- case "Movement"}}lightblue
    {{- case "Carrier"}}yellow
    {{- case "Construction"}}orange
    {{- case "Defence"}}lightgray
    {{- case "Wood"}}maroon
    {{- case "Card"}}blue
    {{- case "Scrap"}}pink
    {{- case "Forest"}}green
    {{- case "Mountain"}}green
    {{- case "Prarie"}}lime
    {{- case "Water"}}blue
    {{- case "Village"}}yellow
    {{- case _}}gray
  {{- /switch -}}
{{- /global -}}


{{-global r_name -}}
  {{-switch $0 -}}
    {{-case "Movement"}}Mv
    {{-case "Food"}}Fd
    {{-case "Attack"}}At
    {{-case "Wood"}}Wd
    {{-case "Iron"}}Ir
    {{-case "Defence"}}Df
    {{-case "Card"}}Cr
    {{-case "Scrap"}}Scp
    {{-case "Village"}}Vlg
    {{-case "Mountain"}}Mnt
    {{-case "Prarie"}}Pri
    {{-case "Water"}}Wtr
    {{-case "Forest"}}Frt
    {{- case <v>}}{{$v}}
  {{- /switch -}}
{{-/global-}}

{{-global resource res x y-}}
    {{switch $res }}
        {{case [<kind>,<num>] [<kind>] <kind>}}
              {{shape $kind $x $y}}
              <text {{xy (sub $x 2) $y}} {{font 4 "Rockwell"}} text-anchor="middle">{{r_name $kind}}</text>
            {{if $num}}
              <text {{xy (sub $x 2)(add $y 3.3)}} {{font 3 "Rockwell"}} text-anchor="middle">{{$num}}</text>
            {{/if}}
    {{/switch}}Defence,Attack,Move

{{- /global -}}
